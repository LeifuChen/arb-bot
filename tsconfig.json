{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "build",
    "incremental": false,
    "sourceMap": false,
    "noEmit": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
